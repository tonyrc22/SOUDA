@section scripts{
    <script>

        var tabladata;
        var filaseleccionada;

     $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("Listarusuario", "Home")',
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                debugger;
                console.log(data)
            }
        })
    });

       tabladata = $("#Tablausuario").DataTable({

            Responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("Listarusuario", "Home")',
                type: "GET",
                dataType: "json",
            },
            "columns": [
                { "data": "US_USCedula" },
                { "data": "US_Nombre" },
                { "data": "US_Apellido" },
                { "data": "US_Ingreso" },
                //{ "data": "US_Contrasena" },
                { "data": "US_Nivel" },
                { "data": "US_Usuario" },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "Orderable": false,
                    "Searchable": false,
                    "width":"90px"

                }
                @*Para hacer botonoes min 22 VID 07*@



            ],
            "language": { "url":"//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json" }



        });

        function abrirModal(json) { @*Abre modal *@


            $("#Control").val(0); // Control para crear usuario nuevo

            $("#txtCedula").val("");
            $("#txtnombre").val("");
            $("#txtapellido").val("");
            $("#txtnivel").val("");
            $("#txtfechain").val("");
            $("#txtcontrasena").val("");
            $("#txtusuario").val("");

            $("#mensajeError").hide();



            if (json != null) {

                var Fechainicial = "";
                var fechafinal = "";

                $("#Control").val(1) //Control para actualizar usuario
                $("#txtCedula").val(json.US_USCedula)
                $("#txtnombre").val(json.US_Nombre)
                $("#txtapellido").val(json.US_Apellido)
                $("#txtnivel").val(json.US_Nivel)

                Fechainicial = (json.US_Ingreso).split("/");

                if (Fechainicial[0].length == 1) { // Tony del futuro Busca pq el .lenght da uno 
                    Fechainicial[0] = "0" + Fechainicial[0]

                }

                if (Fechainicial[1].length == 1) {
                    Fechainicial[1] = "0" + Fechainicial[1]
                }
                fechafinal = Fechainicial[2].substring(0, 4) + "-" + Fechainicial[0] + "-" + Fechainicial[1];

                $("#txtfechana").val(fechafinal);



                $("#txtfechain").val(fechafinal);
                $("#txtcontrasena").val(json.US_Contraseña)
                $("#txtusuario").val(json.US_Usuario)




            } 

            $("#FormModalES").modal("show");


        }

        $("#Tablausuario tbody").on("click", '.btn-editar', function () { // editar

           // alert("hola")

            filaseleccionada = $(this).closest("tr");  //trae los datos de la fila para el Update Video07 final
           var data= tabladata.row(filaseleccionada).data();
           // console.log(tabladata.row(filaseleccionada).data()); // ve la data en consola

            console.log(data)


            abrirModal(data)



        })


        $("#Tablausuario tbody").on("click", '.btn-eliminar', function () { // elimina

            // alert("hola")

            var UsuarioSeleccionado = $(this).closest("tr");


            var data = tabladata.row(UsuarioSeleccionado).data();

            swal({
                title: "Esta Seguro?",
                text: "¿Desea Eliminar el Usuario?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Si, Eliminar",
                cancelButtonText: "Cancelar",
                closeOnConfirm: false
            },
                function () {

                    jQuery.ajax({ // video 11 min8
                        url: '@Url.Action("Eliminarusuario", "Home")',
                        type: "POST",
                        data: JSON.stringify({ id: data.US_USCedula }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {

                            if (data.resultado) {

                                tabladata.row(UsuarioSeleccionado).remove().draw();
                                swal("Eliminado", "El Usuario seleccionado a sido eliminado", "success");
                            } else {

                                swal("No se pudo eliminar", data.mensaje, "error");

                            }
                        },
                        error: function (error) {

                        },



                    });



                });

            console.log(data);

        })



        function Guardar() { // Guarda en la base de Datos


            var Usuario = {





                Control: $("#Control").val(),
                US_USCedula :$("#txtCedula").val(),
                US_Nombre: $("#txtnombre").val(),
                US_Apellido:$("#txtapellido").val(),
                US_Nivel: $("#txtnivel").val(),
                US_Ingreso: $("#txtfechain").val(),
                US_Contrasena: $("#txtcontrasena").val(),
                US_Usuario: $("#txtusuario").val(),




            }
            debugger;
           jQuery.ajax({ // video 11 min8
               url: '@Url.Action("Guardarusuario", "Home")',
               type: "POST",
               data: JSON.stringify({ objeto : Usuario }),
               dataType: "json",
               contentType: "application/json; charset=utf-8",
               success: function (data) {

                   debugger;
                   $('.modal-body').LoadingOverlay("hide");


                   // USUARIO NUEVO
                   if (Usuario.Control == 0) { // esta creando nuevo =0 y actualizando =1

                        alert("Creando")
                        if (data.resultado != 0) {

                            Usuario.Control = data.resultado;
                            tabladata.row.add(Usuario).draw(false);
                            $("#FormModalES").modal("hide");


                        } else if (data.mensaje == "No se puede convertir un objeto DBNull en otros tipos.") {
                            Usuario.Control = data.resultado;
                            tabladata.row.add(Usuario).draw(false);
                            $("#FormModalES").modal("hide");


                        } else  {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }



                        // USUARIO Actualizar/ editar
                    } else {
                        alert("Actualizando")

                        if (data.resultado) {

                            tabladata.row(filaseleccionada).data(Usuario).draw(false);
                            filaseleccionada = null;
                            $("#FormModalES").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();

                        }
                    }

                },
               error: function (error) {
                   $('.modal-body').LoadingOverlay("hide");
                   console.log(data)
                   $("#mensajeError").text("Error ajax");
                   $("#mensajeError").show();
               },


               beforeSend: function () {
                   $('.modal-body').LoadingOverlay("show", { imageResizeFactor: 2, text:"Cargando...",size:14 })


               }

            });


        }

        function ModalVideo(opcion) {


            $("#ModalVideo").modal("show");

        }








// ID USUARIO MIN 10 VIDEO 09
    </script>
}