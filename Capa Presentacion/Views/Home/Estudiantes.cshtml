                        <input type="number" class="form-control" id="txtcedulaencarg" placeholder="112345678" readonly>
                    </div>

                    <div class="col-sm-6">
                        <label for="txtNombreEncargado" class="form-label">Nombre Encargado o Padre</label>
                        <input type="text" class="form-control" id="txtNombreEncargado" readonly>
