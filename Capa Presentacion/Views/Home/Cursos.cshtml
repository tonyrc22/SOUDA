        $("#TablaCurso tbody").on("click", '.btn-eliminar', function () { // elimina

            // alert("hola")

            var UsuarioSeleccionado = $(this).closest("tr");


            var data = tabladata.row(UsuarioSeleccionado).data();

            swal({
                title: "Esta Seguro?",
                text: "¿Desea Eliminar el Curso?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Si, Eliminar",
                cancelButtonText: "Cancelar",
                closeOnConfirm: false
            },
                function () {

                    jQuery.ajax({ // video 11 min8
                        url: '@Url.Action("Eliminarcurso", "Home")',
                        type: "POST",
                        data: JSON.stringify({ id: data.CU_CodCurso }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {

                            if (data.resultado) {

                                tabladata.row(UsuarioSeleccionado).remove().draw();
                                swal("Eliminado", "El Curso seleccionado a sido eliminado", "success");
                            } else {

