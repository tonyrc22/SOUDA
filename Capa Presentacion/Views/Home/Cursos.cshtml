                        if (data.resultado != 0) {

                            Curso.Control = data.resultado;
                            tabladata.row.add(Curso).draw(false);
                            $("#FormModalES").modal("hide");


                        } else if (data.mensaje == "No se puede convertir un objeto DBNull en otros tipos.") {
                            Curso.Control = data.resultado;
                            tabladata.row.add(Curso).draw(false);
                            $("#FormModalES").modal("hide");

                            
                        } else {

                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();

                        }



                        // USUARIO Actualizar/ editar
                    } else {
                        alert("Actualizando")

                        if (data.resultado) {

                            tabladata.row(filaseleccionada).data(Curso).draw(false);
                            filaseleccionada = null;
                            $("#FormModalES").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();

                        }
                    }

                },
               error: function (error) {
                   $('.modal-body').LoadingOverlay("hide");
